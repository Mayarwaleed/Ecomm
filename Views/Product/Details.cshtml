@model Ecomm.Models.Product

@{
    ViewBag.Title = "Product Details";
    Layout = "_Layout"; // Use your default layout
}

<h1>@Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>Product ID:</dt>
            <dd>@Model.ProductId</dd>

            <dt>Category:</dt>
            <dd>@Model.Category?.Name</dd> <!-- Display category name, if available -->

            <dt>Price:</dt>
            <dd>@Model.Price.ToString("C")</dd> <!-- Format price as currency -->

            <dt>Description:</dt>
            <dd>@Model.Description</dd> <!-- Assuming Description is a property of Product -->
        </dl>
    </div>
    <div class="col-md-6">
        <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" class="img-fluid" /> <!-- Assuming there's an image URL property -->
    </div>
</div>

<div class="form-group">
    <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Back to List</a>
    <!-- You can add more buttons for actions like Edit or Delete if needed -->
</div>
